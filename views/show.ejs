<% include partials/header.ejs %>
<div class="container">
    <div class="row justify-content-center">   
        <div class="col-10">
            <h1>Dive Site</h1>
            <h2><%= site.title %></h2>
            <img src="<%= site.image %>" alt="" width="400px">
            <p><%= site.description %></p>
            <p><%= site.depth %></p>
            <p><%= site.level %></p>
            <p><%= site.distance %></p>
            <a href="/sites/<%= site._id%>/edit" class="btn btn-primary">Edit Site</a>
            <form action="/sites/<%= site._id%>?_method=DELETE" method="POST" class="form-group">
                <button class="btn btn-danger" type="submit">DELETE</button>
            </form>
        </div>
    </div>
</div>



